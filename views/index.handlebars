<div class="container">
    <img src="/assets/img/burger.png" alt="burger graphic">
</div>





<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Eat All The Burgers!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{ this.id }}. {{ this.burger_name }}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{ this.id }}>
                        <br>
                        <button type="submit" class="btn btn-default">Nom Nom!</button>
                    </form>
                </div> <!-- end of col-xs-3-->
                {{/unless}}
                {{/each}}
            </div>
        </div> <!-- end of col-xs-12 -->
    </div>

        <!-- where burgers show after they've been devoured -->
        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}.  {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div> <!-- end of col-xs-6 -->

    </div> <!-- end of major row -->
</div> <!-- end of container -->

<!-- place to add data to the db -->
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter-text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>What kind of burger do you like to eat?</p>
        </div>
    </div>
</div>